<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#C26EBA"></solid>
            <corners android:radius="1000dp"></corners>
            <stroke android:color="#000000" android:width="2dp"></stroke>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#4A0044"></solid>
            <corners android:radius="1000dp"></corners>
            <stroke android:color="#000000" android:width="1dp"></stroke>
        </shape>
    </item>

</selector>